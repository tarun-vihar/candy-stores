

<div class="jumbotron">

    <h2 class="display-4"><%= @shop.shop_name %></h2>
   
    <p class="lead"> <%= @shop.address %></p>
    <hr class="my-4">
    
    <% if !@unShelvedcandies.blank? %>
      <table class="table table-striped table-bordered table-hover">
       <caption> Unshelved Candies in <%= @shop.shop_name %> </caption>
        <thead class="table-dark">
          <tr>
            <th> S. No </th>
            <th>Candy name</th>
            <th>Flavor</th>
            <th>Prize</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @unShelvedcandies.each_with_index do |candy, index| %> 
            <tr>
              <td><%= index+1 %>
              <td><%= candy.candy_name %></td>
              <td><%= candy.flavour %></td>
              <td><%= candy.price ? candy.price : 'NA' %></td>
              <td><%= link_to 'Edit', edit_candy_path(candy), :id => @shop.id %></td>
              <td><%= link_to 'Destroy', candy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
        No Unshelved Candies in <%=   @shop.shop_name %>
        <br/>
    <% end %>
  
      <br/>
      <%= link_to 'Add New Candy', new_candy_path(:id => @shop.id), class:"btn btn-primary" %>
    <%= link_to 'Home', shops_path, class:'btn btn-warning' %>
    <%= link_to 'Back to Shop Details', shelves_path(:id => @shop.id), class:'btn btn-dark' %>
</div>



