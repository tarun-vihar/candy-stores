

<div class="jumbotron">

    <h2 class="display-4"><%= @shop.shop_name %></h2>
   
    <p class="lead"> <%= @shop.address %></p>
    <p class="lead"> Number of shelves = <%= @shop.shelves_count %></p>
    <hr class="my-4">

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th> S. No </th>
        <th>Shelf name</th>
        <th>Number Of Candies</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shelves.each_with_index do |shelf, index| %>
        <tr>
          <td><%= index+1 %>
          <td><%= shelf.shelf_name %></td>
          <td><%= shelf.candies_count %></td>
          <td><%= link_to 'Show', shelf %></td>
          <td><%= link_to 'Edit', edit_shelf_path(shelf) %></td>
          <td><%= link_to 'Destroy', shelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
  
    <%= link_to 'Create New Shelf', new_shelf_path(:id => @shop.id), class:"btn btn-primary" %>  
    <%= link_to 'Show Unshelfved candies', unshelved_candies_path(:id => @shop.id), class:'btn btn-secondary' %>
    <%= link_to 'Back', shops_path, class:'btn btn-secondary' %>
</div>





